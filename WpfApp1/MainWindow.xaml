<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="GUI для языкового процессора" Height="381" Width="598">

    <StackPanel>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem Header="Файл" Click="MenuItem_Click">
                <MenuItem Header="Создать" ></MenuItem>
                <MenuItem Header="Открыть" ></MenuItem>
                <MenuItem Header="Сохранить" ></MenuItem>
                <MenuItem Header="Сохранить как" ></MenuItem>
                <MenuItem Header="Выход" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Правка" Click="MenuItem_Click">
                <MenuItem Header="Отменить" ></MenuItem>
                <MenuItem Header="Повторить" ></MenuItem>
                <MenuItem Header="Вырезать" ></MenuItem>
                <MenuItem Header="Копировать" ></MenuItem>
                <MenuItem Header="Вставить" ></MenuItem>
                <MenuItem Header="Удалить" ></MenuItem>
                <MenuItem Header="Выделить всё" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Текст" Click="MenuItem_Click">
                <MenuItem Header="Постановка задачи" ></MenuItem>
                <MenuItem Header="Грамматика" ></MenuItem>
                <MenuItem Header="Классификация грамматики" ></MenuItem>
                <MenuItem Header="Метод анализа" ></MenuItem>
                <MenuItem Header="Тестовый пример" ></MenuItem>
                <MenuItem Header="Список литературы" ></MenuItem>
                <MenuItem Header="Исходный код программы" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Пуск" Click="MenuItem_Click">
            </MenuItem>
            <MenuItem Header="Справка" Click="MenuItem_Click">
                <MenuItem Header="Вызов справки" ></MenuItem>
                <MenuItem Header="О программе" ></MenuItem>
            </MenuItem>
        </Menu>
        <ToolBarTray Background="White">
            <ToolBar Band="1" BandIndex="1">
                <Button Name="create" Width="50" Height="50">
                    <Image Source="/resources/create.png"/>
                </Button>
                <Button Name="open" Width="50" Height="50">
                    <Image Source="/resources/open.png"></Image>
                </Button>
                <Button Name="save" Width="50" Height="50">
                    <Image Source="/resources/save.png"></Image>
                </Button>
                <Separator/>
                <Button Name="back" Width="50" Height="50">
                    <Image Source="/resources/back.png"></Image>
                </Button>
                <Button Name="front" Width="50" Height="50">
                    <Image Source="/resources/forward.png"></Image>
                </Button>
                <Button Name="copy" Width="50" Height="50">
                    <Image Source="/resources/copy.png"></Image>
                </Button>
                <Button Name="paste" Width="50" Height="50">
                    <Image Source="/resources/insert.png"></Image>
                </Button>
                <Button Name="question" Width="50" Height="50">
                    <Image Source="/resources/question.png"></Image>
                </Button>
                <Button Name="about" Width="50" Height="50">
                    <Image Source="/resources/about.png"></Image>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <RichTextBox Width ="Auto" MinHeight="150" FontSize="18">

        </RichTextBox>
        <DataGrid x:Name="phonesGrid" AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"
    RowBackground="LightGray" AlternatingRowBackground="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Файл" Binding="{Binding Path=Title}" Width="*" />
                <DataGridHyperlinkColumn Header="Позиция" Binding="{Binding Path=Company}" Width="*" />
                <DataGridTextColumn Header="Код" Binding="{Binding Path=Price}" Width="*" />
                <DataGridTextColumn Header="Ошибка" Binding="{Binding Path=Price}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
